<grammar version="1.0" xml:lang="fr-FR" mode="voice"  root="ruleCourses" xmlns="http://www.w3.org/2001/06/grammar" tag-format="semantics/1.0">

  <rule id="ruleCourses">
    <tag>out.action=new Object(); </tag>
    <item weight="2">Sarah</item>
    <one-of>
      <item>lit moi la liste des courses<tag>out.action.commande = "lire";</tag></item>
	  <item>supprime la liste des courses <tag>out.action.commande = "supprime";</tag></item>
    </one-of>
    <tag>out.action._attributes.uri="http://127.0.0.1:8080/sarah/courses";</tag>
  </rule>
  
</grammar>
